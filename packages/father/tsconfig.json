{
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": false,
    "baseUrl": ".",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false, // 定义参数必须都使用
    "allowJs": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "paths": {
      "@/*": ["packages/father/src/*"]
    }
  },
  "include": ["packages/father/src/**/*", "setup.ts"],
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "packages/father/src/.umi/*",
    "webpack",
    "jest",
    "lib",
    "es"
  ]
}
